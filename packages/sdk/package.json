{
    "name": "@noia-network/sdk",
    "version": "2.0.0-beta.2",
    "publishConfig": {
        "tag": "beta"
    },
    "description": "",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "pretest": "tsc --noEmit",
        "test": "prettier --config .prettierrc --loglevel warn --list-different src/**/* && npm run jest",
        "jest": "jest && echo All tests passed successfully.",
        "build": "tsc -p ./tools && webpack && tsc -p .",
        "build:browser": "tsc -p ./tools && webpack --config webpack.browser.js",
        "watch": "tsc -p ./tools && webpack -w"
    },
    "repository": {
        "type": "git",
        "url": "https://noianetwork.visualstudio.com/Noia%20project/_git/nodejs-sdk"
    },
    "keywords": [],
    "author": "",
    "license": "AGPL",
    "files": [
        "dist",
        "**/*.md",
        "@types",
        "!/examples",
        "worker.js",
        "**/*.d.ts"
    ],
    "jest": {
        "collectCoverage": true,
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "globals": {
            "ts-jest": {
                "skipBabel": true,
                "tsConfigFile": "tsconfig.test.json"
            }
        },
        "testRegex": "__tests__/.*\\.(test|spec).(ts|tsx|js)$",
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1"
        },
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "dependencies": {
        "@types/fbemitter": "^2.0.32",
        "@types/node": "^10.11.4",
        "shortid": "2.2.13",
        "simple-sha1": "^2.1.1",
        "simplr-logger": "1.0.1",
        "ts-deferred": "^1.0.4"
    },
    "devDependencies": {
        "@noia-network/webrtc-direct-client": "^0.2.14",
        "@simplrjs/webpack": "0.1.0-alpha.14",
        "@types/jest": "^23.3.1",
        "@types/shortid": "0.0.29",
        "declaration-bundler-webpack-plugin": "^1.0.3",
        "detectrtc": "^1.3.6",
        "jest": "^23.5.0",
        "rusha": "0.8.13",
        "simplr-tslint": "^1.0.0-alpha.14",
        "ts-jest": "^23.1.4",
        "tslint": "^5.10.0",
        "tslint-language-service": "^0.9.9",
        "typescript": "^3.1.1",
        "webpack": "^4.14.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4",
        "webpack-dts-bundle": "0.0.2",
        "ts-loader": "5.2.1",
        "babel-loader": "8.0.4",
        "@babel/core": "7.1.2",
        "babel-plugin-syntax-dynamic-import": "6.18.0"
    }
}
