{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "lib": ["dom", "es2015"],
        "types": ["node"],
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "exclude": ["tools", "dist"]
}
